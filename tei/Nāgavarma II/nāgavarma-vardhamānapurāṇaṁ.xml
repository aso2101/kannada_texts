	<lg n="35" met="kandaṁ">
	  <l><note>kāvyāvalōkanadalli 668neya padyavāgi bandide.</note>parivr̥ttateyiṁ nuṇpiṁ</l>
	  <l>śarakāṇḍapratima<app><lem>bhāma</lem><rdg source="#kāvyā">cāru</rdg></app>gauracchaviyaṁ</l>
	  <l>paripakva tāḷaphaḷadoḷ</l>
	  <l>doreye<app><lem>ne sogayipudu satiya ghanakuca</lem><rdg source="#kāvyā">nisugumavaḷa ghana payōdhara</rdg></app>yugaḷaṁ</l>
	</lg>
	<lg n="36" met="kandaṁ">
	  <l>kōmaḷa sirīsa sumanō</l>
	  <l>ddāma samuddāma kāntiyaṁ tāḷdi samaṁ</l>
	  <l>tāmetta haṁsamandara</l>
	  <l>gāminigimbāgi tōṟuguṁ naḷitōḷgaḷ</l>
	</lg>
	<pb n="38"/>
	<lg n="37" met="kandaṁ">
	  <l>kaṭṭaḷeya sarigeyantaḷa</l>
	  <l>vaṭṭire kaṭṭidaṇalippa rēkhātrayadiṁ</l>
	  <l>diṭṭaḷamesevavaḷa koraḷ</l>
	  <l>kaṭṭisidudu sarigeyiṁ beḍaṅgiṁ koraliṁ</l>
	</lg>
	<lg n="38" met="kandaṁ">
	  <l>svagatakaḷaṅkaṁ bhāsva</l>
	  <l>nnagadharabimbaṁ parāgarūpitamabjaṁ</l>
	  <l>sogayisuvamendu kiṟunage</l>
	  <l>naguvavoloppuvudu nagemogaṁ khagasuteyā</l>
	</lg>
	<lg n="39" met="kandaṁ">
	  <l>lāvaṇyajaḷadhiyoḷ ce</l>
	  <l>lvāvarisire poḷeva muttumaṁ pavaḷamumaṁ</l>
	  <l>tāvasakaḻidippuvu daśa</l>
	  <l>nāvaḷiyuṁ satiya sarasa raktādharamuṁ</l>
